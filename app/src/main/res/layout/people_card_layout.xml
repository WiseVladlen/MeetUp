<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card.normal_height"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawablePadding="@dimen/text_icon_card.drawable_padding"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/text_icon_card.horizontal_padding"
        app:drawableStartCompat="@drawable/ic_baseline_person" />

    <ImageButton
        android:id="@+id/button_delete"
        android:layout_width="@dimen/image_button.width"
        android:layout_height="@dimen/image_button.height"
        android:layout_marginEnd="@dimen/image_button.end_margin"
        android:background="@android:color/transparent"
        android:contentDescription="@string/people_card.delete_people_description"
        android:src="@drawable/ic_baseline_close"
        android:visibility="gone" />

</LinearLayout>