<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginBottom="@dimen/toolbar.bottom_margin"
        app:title="@string/event_list.title"
        app:titleCentered="true" />

    <ViewSwitcher
        android:id="@+id/event_list_viewSwitcher"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/event_list.no_results_message" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/event_list_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ViewSwitcher>

</LinearLayout>