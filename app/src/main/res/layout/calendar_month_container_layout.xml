<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_date"
        style="@style/DateLargeCardStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card.normal_height" />

    <LinearLayout
        android:id="@+id/weekdays_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/weekdays_container.top_margin"
        android:orientation="horizontal"
        android:weightSum="7">

        <include layout="@layout/calendar_week_name_layout" />

        <include layout="@layout/calendar_week_name_layout" />

        <include layout="@layout/calendar_week_name_layout" />

        <include layout="@layout/calendar_week_name_layout" />

        <include layout="@layout/calendar_week_name_layout" />

        <include layout="@layout/calendar_week_name_layout" />

        <include layout="@layout/calendar_week_name_layout" />

    </LinearLayout>

</LinearLayout>
