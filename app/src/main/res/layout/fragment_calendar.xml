<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginBottom="@dimen/toolbar.bottom_margin">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:id="@+id/period_button_group"
                style="@style/RadioGroupStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/day_button"
                    android:layout_width="@dimen/radio_button.width"
                    android:layout_height="@dimen/radio_button.height"
                    android:text="@string/calendar.period_day" />

                <RadioButton
                    android:id="@+id/month_button"
                    android:layout_width="@dimen/radio_button.width"
                    android:layout_height="@dimen/radio_button.height"
                    android:text="@string/calendar.period_month" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/add_button"
                    android:layout_width="@dimen/image_button.width"
                    android:layout_height="@dimen/image_button.height"
                    android:contentDescription="@string/calendar.add_event_description"
                    android:src="@drawable/ic_baseline_add" />

                <ImageButton
                    android:id="@+id/more_button"
                    android:layout_width="@dimen/image_button.width"
                    android:layout_height="@dimen/image_button.height"
                    android:contentDescription="@string/calendar.more_info_description"
                    android:src="@drawable/ic_baseline_more_vertical" />

            </LinearLayout>

        </FrameLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <com.kizitonwose.calendar.view.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:cv_dayViewResource="@layout/calendar_day_layout"
        app:cv_monthHeaderResource="@layout/calendar_month_container_layout"
        app:cv_orientation="horizontal" />

    <LinearLayout
        android:id="@+id/event_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_date"
            style="@style/DateNormalCardStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card.normal_height" />

        <ViewSwitcher
            android:id="@+id/event_list_viewSwitcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/calendar.event_list.no_results_message" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/event_list_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </ViewSwitcher>

    </LinearLayout>

</LinearLayout>